{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "jsx": "react",
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules/**/*",
    "dist/**/*"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}