  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "strictNullChecks": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}